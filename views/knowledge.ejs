<!DOCTYPE html>
<html>

<head>
    <title> 上饶农商考试系统 </title>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta name="renderer" content="webkit">
    <link rel="stylesheet" href="/bower_components/amazeui/dist/css/amazeui.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <style>
    .am-header-white {
        background-color: #317A1F;
    }

    .am-header-white .am-header-title,
    .am-header-white .am-header-left a i {
        color: #FFF;
    }

    .xb-scorelist .am-btn-success {
        background-color: #317A1F;
    }
    </style>
    <header data-am-widget="header" class="am-header am-header-white">
        <div class="am-header-left am-header-nav">
            <a href="javascript:window.history.back();" class="">
                <i class="am-icon-angle-left am-fr am-icon-lg"></i>
            </a>
        </div>
        <h1 class="am-header-title">知识库</h1>
        <div class="am-header-right am-header-nav">
            <a href="#right-link" class=""></a>
        </div>
    </header>
    <style type="text/css">
    .xb-list{
        height: calc(100% - 101px);
        overflow: hidden;
        position: relative;
        overflow-y: scroll; 
    }

    .xb-list .am-list {
        margin-top: 10px;
    }

    .xb-list .am-list li {
        margin-bottom: 10px;
        padding: 0.5em;
        border: none;
        border-bottom: 1px solid #dedede;
    }

    .xb-list .am-list li i:last-child {
        float: right;
    }

    .xb-list .am-list span {
        display: inline-block;
        padding-left: 10px;
        width: 300px;
    }

    .xb-list .am-list li a {
        display: block;
        padding: 0;
        color: #000;
    }

    .xb-list-search{
        margin-top: 10px;
    }

    .xb-list-search .am-btn-default{
        background-color: #317A1F;
        color: #FFF;
    }
    .xb-list-search .am-btn-default span{
        color: #FFF;
    }
    </style>
    <div class="am-g xb-list">
        <% if(type !== 'knowsArticle'){ %>
        <div class="am-u-sm-12 xb-list-search">
            <form action="/knowledge/search" method="POST">
                <div class="am-input-group">
                    <input type="text" name="info" class="am-form-field" placeholder="农商">
                    <span class="am-input-group-btn">
                        <button class="am-btn am-btn-default" type="submit">
                            <span class="am-icon-search"></span>
                        </button>
                    </span>
                </div> 
            </form>
        </div>
        <% } %>
        <div class="am-u-sm-12">
            <ul class="am-list am-list-static am-list-border">
                <% if(data && type == 'knowsList'){ %>
                    <% for(var i=0;i<data.length;i++){ %>
                        <li>
                            <a href="/knowledge/<%= data[i].id %>">
                                <!-- <i class="am-icon-area-chart am-icon-sm am-icon-fw"></i> -->
                                <span><%= data[i].knowtype %></span>
                                <i class="am-icon-angle-right am-icon-fw"></i>
                            </a>
                        </li>
                    <% }%>
                <% }%>
                <% if(data && type == 'knowsDetail'){ %>
                    <% for(var i=0;i<data.length;i++){ %>
                        <li>
                            <a href="/knowledge/article/<%= data[i].id %>">
                                <!-- <i class="am-icon-area-chart am-icon-sm am-icon-fw"></i> -->
                                <span><%= data[i].title %></span>
                                <i class="am-icon-angle-right am-icon-fw"></i>
                            </a>
                        </li>
                    <% }%>
                <% }%>
                <!-- <li>
                    <a href="#">
                        <i class="am-icon-area-chart am-icon-sm am-icon-fw"></i>
                        <span>财政管理</span>
                        <i class="am-icon-angle-right am-icon-fw"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="am-icon-lastfm am-icon-sm am-icon-fw"></i>
                        <span>前台礼仪</span>
                        <i class="am-icon-angle-right am-icon-fw"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="am-icon-paypal am-icon-sm am-icon-fw"></i>
                        <span>人力资源</span>
                        <i class="am-icon-angle-right am-icon-fw"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="am-icon-yelp am-icon-sm am-icon-fw"></i>
                        <span>推广营销</span>
                        <i class="am-icon-angle-right am-icon-fw"></i>
                    </a>
                </li> -->
            </ul>
        </div>
        <div class="am-u-sm-12">
            <% if(data && type == 'knowsArticle'){ %>
            <article class="am-article">
                <!-- <div class="am-article-hd">
                    <h1 class="am-article-title"><%= data.title %></h1>
                    <p class="am-article-meta"><%= data.time %></p>
                </div> -->
                <div class="am-article-bd" id="str">
                    <%- data.article %>
                </div>
            </article>
            <% } %>
        </div>

    </div>
    <style>
    .xb-bottom .xb-bottom-img {
        position: absolute;
        left: 50%;
        margin-left: -20%;
        width: 40%;
        bottom: 10px;
    }

    .xb-bottom .xb-bottom-img img {
        width: 100%;
    }
    </style>
    <div class="xb-bottom am-g">
        <div class="am-u-sm-12">
            <div class="xb-bottom-img">
                <img src="/images/font.jpg" alt="">
            </div>
        </div>
    </div>
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/amazeui/dist/js/amazeui.min.js"></script>
    <script>
        <% if(type == "knowsArticle"){ %>
            var data = document.querySelector("#str");
            data.innerHTML=data.innerText;
        <% } %>
    </script>
</body>

</html>